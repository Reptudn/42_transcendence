{
	"name": "transcendence",
	"version": "1.0.0",
	"description": "Overengeneered PONG",
	"main": "app.ts",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"start": "npm run build:ts && npm run build:frontend && npm run build:css && fastify start --address 0.0.0.0 -l info app/dist/app.js",
		"build:ts": "tsc",
		"watch:ts": "tsc -w",
		"build:frontend": "tsc -p tsconfig.frontend.json",
		"watch:frontend": "tsc -p tsconfig.frontend.json -w",
		"build:css": "npx @tailwindcss/cli -i ./app/public/css/main.css -o ./app/public/css/output.css",
		"watch:css": "npx @tailwindcss/cli -i ./app/public/css/main.css -o ./app/public/css/output.css --watch",
		"dev": "npm run build:ts && npm run build:frontend && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:watch:frontend\" \"npm:watch:css\" \"npm:dev:start\"",
		"dev:start": "fastify start --ignore-watch='node_modules dist db' -w -l info --address 0.0.0.0 -P app/dist/app.js"
	},
	"keywords": [
		"42",
		"42heilbronn",
		"core"
	],
	"author": "jkauker",
	"license": "ISC",
	"dependencies": {
		"@fastify/autoload": "^6.0.0",
		"@fastify/cookie": "^11.0.2",
		"@fastify/env": "^5.0.2",
		"@fastify/jwt": "^9.1.0",
		"@fastify/oauth2": "^8.1.2",
		"@fastify/sensible": "^6.0.3",
		"@fastify/static": "^8.1.1",
		"@fastify/view": "^11.0.0",
		"@fastify/websocket": "^11.0.2",
		"@tailwindcss/cli": "^4.1.6",
		"@types/bcrypt": "^5.0.2",
		"@types/ejs": "^3.1.5",
		"@types/ws": "^8.18.1",
		"ajv-errors": "^3.0.0",
		"bcrypt": "^5.1.1",
		"ejs": "^3.1.10",
		"fastify": "^5.3.0",
		"fastify-cli": "^7.4.0",
		"fastify-plugin": "^5.0.0",
		"i": "^0.3.7",
		"i18next": "^25.1.3",
		"i18next-fs-backend": "^2.6.0",
		"i18next-http-middleware": "^3.7.4",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"ts-node": "^10.9.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.14.1",
		"c8": "^10.1.2",
		"concurrently": "^9.0.0",
		"fastify-tsconfig": "^3.0.0",
		"tailwindcss": "^4.1.6",
		"ts-node": "^10.4.0",
		"typescript": "~5.8.2"
	}
}
