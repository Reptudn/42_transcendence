<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md">
	<% if (isSelf) { %>
		<div class="flex justify-end">
			<a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
				onclick="loadPartialView('edit_profile')">
				Edit Profile
			</a>
		</div>
		<% } %>
			<div class="flex items-center space-x-4">
				<img src="/<%= user.profile_picture || 'static/assets/images/default_profile.png' %>"
					alt="Profile Picture" class="w-24 h-24 rounded-full object-cover ring-2 ring-blue-500">
				<div>
					<h2 class="text-2xl font-bold">
						<%= user.displayname %>
					</h2>
					<h3 class="text-xl">@<%= user.username %>
					</h3>
				</div>
			</div>
			<% if (user.bio) { %>
				<div class="mt-4">
					<h4 class="font-bold">Bio:</h4>
					<p>
						<%= user.bio || 'This user has not added a bio yet.' %>
					</p>
				</div>
				<% } %>
					<div class="mt-6 border-t pt-4">
						<h4 class="font-bold">Match History</h4>
						<p class="text-gray-500">Coming soon...</p>
					</div>
</div>