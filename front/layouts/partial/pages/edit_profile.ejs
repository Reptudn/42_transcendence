<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md">
	<h2 class="text-2xl font-bold mb-6 text-center">Edit Your Profile</h2>
	<!-- Use enctype multipart/form-data for file uploads -->
	<form id="editProfileForm" action="/profile/edit" method="POST" enctype="multipart/form-data">
		<div class="mb-4">
			<label class="block text-gray-700 font-bold mb-2">Profile Picture:</label>
			<% if (user.profile_picture) { %>
				<img src="/<%= user.profile_picture %>" alt="Profile Picture" class="w-24 h-24 rounded-full mb-2">
				<% } %>
					<input type="file" name="profile_picture" accept="image/*" class="w-full">
		</div>
		<div class="mb-4">
			<label class="block text-gray-700 font-bold mb-2">Username:</label>
			<input type="text" name="username" value="<%= user.username %>" required pattern="\\S+"
				class="w-full px-3 py-2 border rounded">
			<small class="text-gray-500">No spaces allowed.</small>
		</div>
		<div class="mb-4">
			<label class="block text-gray-700 font-bold mb-2">Display Name:</label>
			<input type="text" name="displayname" value="<%= user.displayname %>" required
				class="w-full px-3 py-2 border rounded">
		</div>
		<div class="mb-4">
			<label class="block text-gray-700 font-bold mb-2">Bio:</label>
			<textarea name="bio" rows="3" class="w-full px-3 py-2 border rounded"><%= user.bio %></textarea>
		</div>
		<hr class="my-4">
		<h3 class="text-lg font-bold mb-2">Change Password</h3>
		<div class="mb-4">
			<label class="block text-gray-700 font-bold mb-2">Old Password:</label>
			<input type="password" name="oldPassword" class="w-full px-3 py-2 border rounded">
		</div>
		<div class="mb-6">
			<label class="block text-gray-700 font-bold mb-2">New Password:</label>
			<input type="password" name="newPassword" class="w-full px-3 py-2 border rounded">
			<small class="text-gray-500">New password cannot contain spaces.</small>
		</div>
		<div class="text-center">
			<button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Save
				Changes</button>
		</div>
	</form>
</div>