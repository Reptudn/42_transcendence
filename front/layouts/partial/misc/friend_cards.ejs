<% if (results && results.length> 0) { %>
	<div class="flex flex-wrap gap-4">
		<% results.forEach(function(user) { %>
			<div class="flex flex-col items-center bg-gray-100 p-4 rounded-lg shadow-sm">
				<img src="/api/profile/<%= user.id %>/picture?v=<%= Date.now() %>" alt="Profile Picture <%= user.id %>"
					class="w-16 h-16 rounded-full object-cover ring-2 ring-blue-500">
				<div class="text-center mt-2">
					<div class="text-lg font-bold">
						<%= user.displayname %>
					</div>
					<div class="text-sm text-gray-600">@<%= user.username %>
					</div>
				</div>
				<% if (!user.alreadyFriend) { %>
					<button onclick="sendFriendRequest(<%= user.id %>, this)"
						class="mt-2 bg-blue-500 hover:bg-blue-700 text-white text-xs font-bold py-1 px-3 rounded">
						Add Friend
					</button>
					<% } else { %>
						<span class="mt-2 text-green-600 font-bold">Friends</span>
						<% } %>
			</div>
			<% }); %>
	</div>
	<% } else { %>
		<p class="p-4">No users found.</p>
		<% } %>