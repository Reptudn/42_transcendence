	</div>

	<div class="flex justify-end space-x-2">
		<button id="closeUnblockUser" class="px-4 py-2 border"><%= t('chat.cancel') %></button>
		<button id="confirmUnblockUser" class="bg-blue-600 text-white px-4 py-2 rounded"><%= t('chat.unblock_user') %></button>
	</div>
</div>

<!-- Modal für invite-User -->
<div id="inviteUserWindow" class="p-6 w-1/5 fixed h-[80vh] top-34 right-10 px-4 py-2 backdrop-blur-sm rounded border-[#00ff00] border flex flex-col space-y-2 hidden z-50">
	<h2 class="text-lg font-semibold"><%= t('chat.invite_to_chat') %></h2>

	<input id="searchUserToInvite" type="text" class="w-full border px-3 py-2" placeholder="<%= t('chat.placeholder_search_people') %>">

