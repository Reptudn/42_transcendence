<div class="max-w-2xl mx-auto p-6 rounded-lg">
	<h2 class="text-2xl font-bold mb-4"><%= ownerName %>'s game</h2>
	<canvas id="gameCanvas" width="500" height="500" class="glow-rainbow-border"></canvas>
	<p>Players:</p>
	<ul>
		<% players.forEach(player => { %>
			<li class="glow-green"><%= player.name %> (<%= player.score %>)</li>
		<% }); %>
	</ul>
	<div id="state"></div>
</div>

<script type="module" src="/static/js/gameRenderer.js"></script>
<script type="module" src="/static/js/game.js"></script>
